






























/*数据列表*/
.pd-list{
	background-color: #fff;
}
.pd-li{
	position: relative;
	height: 160rpx;
	padding: 20rpx 16rpx 20rpx 240rpx;
	border-bottom: 1rpx solid #eee;
}
.pd-li .pd-img{
	position: absolute !important; /*编译到H5,在mescroll-more的案例中需加上!important,解决tab切换过快定位失效的问题*/
	left: 36rpx;
	top: 20rpx;
	width: 160rpx;
	height: 160rpx;
}
.pd-li .pd-name{
	font-size: 26rpx;
	line-height: 40rpx;
	height: 80rpx;
	margin-bottom: 20rpx;
	overflow: hidden;
}
.pd-li .pd-price{
	font-size: 26rpx;
	color: red;
}
.pd-li .pd-sold{
	font-size: 24rpx;
	margin-left: 16rpx;
	color: gray;
}

